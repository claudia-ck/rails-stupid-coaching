<div class="container">
  <div class="row justify-content-start">
    <div class="mb-6">
      <h1>Stupid Coaching</h1>
      <p>Ask your coach anything:</p>
      <form action="/answer" data-turbo="false" class ="mb-6 ">
      <div class="input-group mb-6">
        <input type="text" class="form-control" name="question" value=<%= params[:question] %>>
        <div class="input-group-append">
          <input class="btn btn-outline-secondary" type="submit" value="Ask"></input>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>
